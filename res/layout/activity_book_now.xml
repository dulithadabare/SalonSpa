<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FullLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BookNow" >

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"     
     android:id="@+id/CenterLayout"
        >
    
    <Button
        android:id="@+id/Button04"
        style="@style/ButtonText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundedbutton"
        android:text="Button04" />
    

    <Button
        android:id="@+id/Button03"
        style="@style/ButtonText"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/roundedbutton"
        android:text="Button03" />

    <Button
        android:id="@+id/Animtest"
        style="@style/ButtonText"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/Button04"
     
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedbutton"
        android:text="Buttontest" />

    <Button
        android:id="@+id/Button02"
        style="@style/ButtonText"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/Button04"
        android:background="@drawable/roundedbutton"
        android:text="Button02" />

    <Button
        android:id="@+id/Button01"
        style="@style/ButtonText"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/Animtest"
        android:layout_below="@+id/Button04"
        android:background="@drawable/roundedbutton"
        android:text="Button" />

</RelativeLayout>

<RelativeLayout
    android:id="@+id/LayoutRight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >

<ImageView
    android:id="@+id/salon_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:src="@drawable/back" />

    </RelativeLayout>
    
    </RelativeLayout>
